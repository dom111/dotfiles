[user]
	name = Dom Hastings
	email = dominik.hastings@fundingcircle.com
	signingkey = 98E192BE98525D3391C6101702357F2E5B850368
[push]
        default = tracking
	autoSetupRemote = true

[color]
    ui = auto

[color "branch"]
    current = 113 reverse
    local = 113
    remote = 221

[color "diff"]
    meta = 242
    frag = 141
    old = 204
    new = 113

[color "status"]
    added = 113
    changed = 221
    untracked = 80
    branch = 141
    unmerged = 204

[color "diff-highlight"]
    oldnormal = 204
    oldhighlight = 204 52
    oldreset = 204
    newnormal = 113
    newhighlight = 113 22
    newreset = 113

[core]
    pager = less -RLnFX
    editor = vim
	excludesfile = /Users/dominik.hastings/.gitignore_global

#[pager]
#    show = diff-highlight | less -RLnFX
#    diff = diff-highlight | less -RLnFX

[gc]
	auto = 0

[credential]
	helper = cache
[commit]
	gpgsign = true
[gpg]
    program = /opt/homebrew/bin/gpg

[url "git@github.com:"]
    insteadOf = "https://github.com/"

[diff]
        tool = difftastic
        external = difft

[difftool]
        prompt = false

[difftool "difftastic"]
        cmd = difft "$LOCAL" "$REMOTE"

[pager]
        difftool = true

