[user]
        name = Dom Hastings
        email = dhastings@estee-lauder.co.uk
[push]
        default = tracking

[color]
    ui = auto

[color "branch"]
    current = 186 reverse
    local = 186
    remote = 154

[color "diff"]
    meta = 242
    frag = 141
    old = 197
    new = 154

[color "status"]
    added = 154
    changed = 186
    untracked = 81
    branch = 141
    unmerged = 197

[color "diff-highlight"]
    oldnormal = 197
    oldhighlight = 197 52
    oldreset = 197
    newnormal = 154
    newhighlight = 154 22
    newreset = 154

[core]
    pager = less -RLnF
    editor = vim

[pager]
    show = diff-highlight | less -RLnF
    diff = diff-highlight | less -RLnF

[gc]
	auto = 0

[credential]
	helper = cache
