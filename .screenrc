# setup 10,000 lines of available scrollback . copy/paste
defscrollback 10000

term xterm-256color

# fix scrollback in putty
termcapinfo xterm* ti@:te@ # allows scrolling in screen

shell "/bin/bash"

# hardstatus alwayslastline 
hardstatus lastline 
hardstatus string '%{WK} %D %d %M %Y %c:%s %{kw} %-Lw%{kW}%50>%n%f* %t%{kw}%+Lw%<'


